{
    "compilerOptions": {
        "target": "es2019",
        "module": "CommonJS",
        "lib": [
          "es2015",
          "es2016",
          "es2017",
          "es2018",
          "es2019"
        ],
        "outDir": "build",
        "strict": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}
